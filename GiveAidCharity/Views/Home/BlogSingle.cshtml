        $.ajax({
            url: '/Api/Vote',
            data: {
                userId: $('input[name="userId"]').val(),
                blogId: $('input[name="blogId"]').val(),
                status: $('input[name="status"]').val()
            },
            success: function(res) {
                console.log(res);
            }
        });
    </script>
}
