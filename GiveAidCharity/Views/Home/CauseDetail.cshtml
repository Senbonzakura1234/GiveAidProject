@section scripts
{
    @if (User.Identity.IsAuthenticated)
    {
        <script>
            function replaceUsername() {
                $(".replaceUsername").html($("#userName").val());
            }

            $(function () {
                replaceUsername();
                $(".reply").click(function () {
                    if ($(this).hasClass("replyToParent")) {
                        const parentId = $(this).data("parentId");
                        $(".child-comment-box").remove();
                        const data = `<li class="comment child-comment-box" >
                                        <div class="vcard bio">
                                            <img src="~/Content/HomepageTheme/images/person_1.jpg" alt="Image placeholder">
                                        </div>
                                        <div class="comment-body">
                                            <h3 class="replaceUsername"></h3>
                                            <form name="form${parentId}" id="form${parentId}">
                                                <div class="form-group">
                                                    <textarea class="form-control newComment newParentComment"
                                                          id="commentInput" namde="commentInput" rows="3"></textarea>
                                                    <input type="hidden" name="childOf" id="childOf" value="${parentId}"/>
                                                </div>
                                                <div class="form-group d-flex">
                                                    <button class="btn btn-primary ml-auto">Comment</button>
                                                </div>
                                            </form>
                                        </div>
                                    </li>`;
                        console.log(data);
                        $(`.children[data-parentId=${parentId}]`).prepend(data);
                    }
                    else {
                        const parentId = $(this).data("parentId");
                        const tag = $(this).data("replyTag");
                        $(".child-comment-box").remove();
                        const data = `<li class="comment child-comment-box" >
                                        <div class="vcard bio">
                                            <img src="~/Content/HomepageTheme/images/person_1.jpg" alt="Image placeholder">
                                        </div>
                                        <div class="comment-body">
                                            <h3 class="replaceUsername"></h3>
                                            <form name="form${parentId}" id="form${parentId}">
                                                <div class="form-group">
                                                    <textarea class="form-control newComment newParentComment"
                                                          id="commentInput" namde="commentInput" rows="3">@@${tag}</textarea>
                                                    <input type="hidden" name="childOf" id="childOf" value="${parentId}"/>
                                                </div>
                                                <div class="form-group d-flex">
                                                    <button class="btn btn-primary ml-auto">Comment</button>
                                                </div>
                                            </form>
                                        </div>
                                    </li>`;
                        $(`#children${parentId}`).after(data);
                    }
                    replaceUsername();
                });

            });


            $(function () {
                $("#paypalbtn").click(function () {
                    $("#paypalForm").submit();
                });
            });
            $(function () {
                function submitFollow() {

                    const form = $('#__AjaxAntiForgeryForm');
                    const token = $('input[name="__RequestVerificationToken"]', form).val();
                    $.ajax({
                        url: $("#urlSubmit").val(),
                        type: 'POST',
                        data: {
                            __RequestVerificationToken: token,
                            userId: $('input[name="userId"]', form).val(),
                            projectId: $('input[name="projectId"]', form).val(),
                            status: $('input[name="status"]', form).val()
                        },
                        success: function (res) {
                            console.log(res);
                            // ReSharper disable once CoercedEqualsUsing
                            if ($("#statusValue").val() == 1) {
                                $("#statusValue").val(0);
                            } else {
                                $("#statusValue").val(1);
                            }

                        }
                    });
                };

                $("#followTrigger").click(function () {
                    $(this).toggleClass("active");
                    submitFollow();

                });
            });
        </script>

    }
    <script>
        var value = $("#ariaValuenowInput").val(),
            i = value < 100 ? 0 : 99;
        var progressBar = $(".cause-progress");

        function countNumbers() {
            if (i < value) {
                if (i < value - 5) {
                    i += 5;
                } else if (i < value - 3) {
                    i += 3;
                } else {
                    i++;
                }
                progressBar.css("width", i + "%");
            }
            // Wait for sometime before running this script again
            setTimeout("countNumbers()", 20);
        }

        $(function () {
            countNumbers();
        });

    </script>
}
