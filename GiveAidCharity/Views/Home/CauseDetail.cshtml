              id="vnPayForm" method="post" target="_top">
            @Html.Hidden("userId", User.Identity.GetUserId())
            @Html.Hidden("projectId", Model.Id)
            <div class="form-group">
                <label for="amountVnpay">Amount: </label>
                <div class="input-group mb-3">
                    <div class="input-group-prepend ">
                        <span class="input-group-text bg-primary text-white">$</span>
                    </div>
                    <input type="text" id="amountVnpay" name="amountVnpay" min="1" value="1"
                           class="form-control" aria-label="Amount (to the nearest dollar)">
                    <div class="input-group-append ">
                        <button type="submit" class="btn btn-primary ml-auto">Donate</button>
                    </div>
                </div>
            </div>
            <div class="form-group d-flex mb-0">
                <img style="max-height: 20px" class="ml-auto my-auto"
                     src="https://res.cloudinary.com/senbonzakura/image/upload/v1582377977/Give%20Aid%20Project/vnpaylogo_hgu1jj.png" alt="" />
            </div>
        </form>
    }
}
@section scripts
{
    @if (User.Identity.IsAuthenticated)
    {
        <script>
            $(function () {
                $("#paypalbtn").click(function() {
                    $("#paypalForm").submit();
                });
            });
        </script>
    }
    <script>
        var value = $("#ariaValuenowInput").val(),
            i = value < 100 ? 0 : 99;
        var progressBar = $(".cause-progress");
        function countNumbers() {
            if (i < value) {
                if (i < value - 5) {
                    i += 5;
                } else if (i < value - 3) {
                    i += 3;
                } else {
                    i++;
                }
                progressBar.css("width", i + "%");
            }
            // Wait for sometime before running this script again
            setTimeout("countNumbers()", 20);
        }
        $(function () {
            countNumbers();
        });
    </script>
}
