@using System.Globalization
@model GiveAidCharity.Models.HelperClass.CausesDetailViewModel

@{
    ViewBag.Title = "Cause Detail";
}
@* ReSharper disable  MarkupTextTypo *@
@section hero_wrap
{
    <p class="breadcrumbs" data-scrollax="properties: { translateY: '30%', opacity: 1.6 }"><span class="mr-2"><a href="@Url.Action("Index")">Home</a></span> <span class="mr-2"><a href="@Url.Action("Causes")">Causes</a></span> <span>Cause Details</span></p>
    <h1 class="mb-3 bread" data-scrollax="properties: { translateY: '30%', opacity: 1.6 }">Cause Details</h1>
}
<section class="ftco-section ftco-degree-bg">
    <div class="container">
        <div class="row">
            <div class="col-md-8 ftco-animate">
                <h2 class="mb-3">@Html.DisplayFor(model => model.Name)</h2>
                <p>
                    <div class="progress custom-progress-success">
                        <div class="progress-bar bg-primary" role="progressbar" 
                             style="width: @((Model.CurrentFund < Model.Goal? 100*Model.CurrentFund/ Model.Goal : 100).ToString(CultureInfo.InvariantCulture))%" 
                             aria-valuenow="@((Model.CurrentFund < Model.Goal? 100*Model.CurrentFund/ Model.Goal : 100).ToString(CultureInfo.InvariantCulture))" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                    <span class="fund-raised d-block">$@Html.DisplayFor(model => model.CurrentFund) raised of $@Html.DisplayFor(model => model.Goal)</span>
                </p>
                <p>
                    <img src="@Model.CoverImg" alt="" class="img-fluid" style="width: 100%">
                </p>
                <p>@Html.DisplayFor(model => model.ContentPart1)</p>
                <p>@Html.DisplayFor(model => model.ContentPart2)</p>
                @foreach (var item in Model.ProjectImages)
                {
                    <p><img src="@item.Url" alt="" class="img-fluid" style="width: 100%"></p>
                    <p>@item.Description</p>
                }
                <div class="tag-widget post-tag-container mb-5 mt-5">
                    <div class="tagcloud">
                        <a href="#" class="tag-cloud-link">Life</a>
                        <a href="#" class="tag-cloud-link">Sport</a>
                        <a href="#" class="tag-cloud-link">Tech</a>
                        <a href="#" class="tag-cloud-link">Travel</a>
                    </div>
                </div>

                <div class="about-author d-flex p-5 bg-light">
                    <div class="bio align-self-md-center mr-5">
                        <img src="@(Model.HostAvatar ?? "../../Content/HomepageTheme/images/person_1.jpg")" alt="Image placeholder" class="img-fluid mb-4">
                    </div>
                    <div class="desc align-self-md-center">
                        <h3>@Html.DisplayFor(model => model.HostName)</h3>
                        <p>
                            @* ReSharper disable  StringLiteralTypo *@
                            @(Model.HostDescription ?? "Lorem ipsum dolor sit amet, consectetur adipisicing elit. " +
                              "Ducimus itaque, autem necessitatibus voluptate quod mollitia delectus aut, " +
                              "sunt placeat nam vero culpa sapiente consectetur similique, " +
                              "inventore eos fugit cupiditate numquam!")
                        </p>
                        <p> @Model.HostEmail  @Model.HostPhone </p>
                    </div>
                </div>


                <div class="pt-5 mt-5">
                    <h3 class="mb-5">@Model.ProjectComments.Count Comments</h3>
                    <ul class="comment-list">
                        @foreach (var item in Model.ProjectComments.Where(item => item.ParentId == null))
                        {
                            <li class="comment">
                                <div class="vcard bio">
                                    <img src="~/Content/HomepageTheme/images/person_1.jpg" alt="Image placeholder">
                                </div>
                                <div class="comment-body">
                                    <h3>@item.ApplicationUser.UserName</h3>
                                    <div class="meta">@item.CreatedAt</div>
                                    <p>@item.Content</p>
                                    <p><a href="#" class="reply">Reply</a></p>
                                </div>
                                <ul class="children">
                                    @foreach (var childcomment in Model.ProjectComments.Where(childcomment => childcomment.ParentId == item.Id))
                                    {
                                        <li class="comment">
                                            <div class="vcard bio">
                                                <img src="~/Content/HomepageTheme/images/person_1.jpg" alt="Image placeholder">
                                            </div>
                                            <div class="comment-body">
                                                <h3>@childcomment.ApplicationUser.UserName</h3>
                                                <div class="meta">@childcomment.CreatedAt</div>
                                                <p>@childcomment.Content</p>
                                                <p><a href="#" class="reply">Reply</a></p>
                                            </div>
                                        </li>
                                    }
                                </ul>
                            </li>
                        }
                    </ul>
                    <!-- END comment-list -->

                    <div class="comment-form-wrap pt-5">
                        <h3 class="mb-5">Leave a comment</h3>
                        <form action="#" class="p-5 bg-light">
                            <div class="form-group">
                                <label for="name">Name *</label>
                                <input type="text" class="form-control" id="name">
                            </div>
                            <div class="form-group">
                                <label for="email">Email *</label>
                                <input type="email" class="form-control" id="email">
                            </div>
                            <div class="form-group">
                                <label for="website">Website</label>
                                <input type="url" class="form-control" id="website">
                            </div>

                            <div class="form-group">
                                <label for="message">Message</label>
                                <textarea name="" id="message" cols="30" rows="10" class="form-control"></textarea>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Post Comment" class="btn py-3 px-4 btn-primary">
                            </div>

                        </form>
                    </div>
                </div>

            </div> <!-- .col-md-8 -->
            <div class="col-md-4 sidebar ftco-animate">
                <div class="sidebar-box">
                    <form action="https://www.sandbox.paypal.com/cgi-bin/webscr" class="search-form" method="post" target="_top">
                        <input type="hidden" name="cmd" value="_donations" />
                        <input type="hidden" name="business" value="sb-aqu7j906731@personal.example.com" />
                        <input type="hidden" name="item_name" value="Make earth great again !" />
                        <input type="hidden" name="currency_code" value="USD" />
                        <input type="hidden" name="return" value="@Url.Action("Success", "IPNPayPal", null, Request.Url?.Scheme)">
                        <input type="hidden" name="notify_url" value="@Url.Action("Receive", "IPNPayPal", null ,Request.Url?.Scheme)">
                        @Html.Hidden("projectId", Model.Id)
                        @Html.Label("Donate", "Donate With Paypal")
                        <button class="btn btn-dark w-100" type="submit">
                            <img class="paypal-button-logo paypal-button-logo-pp paypal-button-logo-black" src="data:image/svg+xml;base64," alt="pp">
                            <img class="paypal-button-logo paypal-button-logo-paypal paypal-button-logo-black" src="data:image/svg+xml;base64," alt="paypal">
                        </button>
                    </form>
                </div>
                <div class="sidebar-box ftco-animate">
                    <div class="row">
                        @Html.Action("SingleTopDonate", "Home", new { id = Model.Id })
                        <div class="col-md-12 d-flex mb-sm-4 ftco-animate">
                            <div class="staff w-100">
                                <div class="text text-center">
                                    <a href="@Url.Action("CausesDonate", "Home", new {id = Model.Id})">
                                        View More
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="sidebar-box ftco-animate">
                    <ul class="categories">
                        <li><h3>Categories</h3></li>
                        <li><a href="#">Tour <span>(12)</span></a></li>
                        <li><a href="#">Hotel <span>(22)</span></a></li>
                        <li><a href="#">Coffee <span>(37)</span></a></li>
                        <li><a href="#">Drinks <span>(42)</span></a></li>
                        <li><a href="#">Foods <span>(14)</span></a></li>
                        <li><a href="#">Travel <span>(140)</span></a></li>
                    </ul>
                </div>

                <div class="sidebar-box ftco-animate">
                    <h3>Recent Cause</h3>
                    <div class="block-21 mb-4 d-flex">
                        <a class="Cause-img mr-4" style="background-image: url(/Content/HomepageTheme/images/image_1.jpg);"></a>
                        <div class="text">
                            <h3 class="heading"><a href="#">Even the all-powerful Pointing has no control about the blind texts</a></h3>
                            <div class="meta">
                                <div><a href="#"><span class="icon-calendar"></span> July 12, 2018</a></div>
                                <div><a href="#"><span class="icon-person"></span> Admin</a></div>
                                <div><a href="#"><span class="icon-chat"></span> 19</a></div>
                            </div>
                        </div>
                    </div>
                    <div class="block-21 mb-4 d-flex">
                        <a class="Cause-img mr-4" style="background-image: url(/Content/HomepageTheme/images/image_2.jpg);"></a>
                        <div class="text">
                            <h3 class="heading"><a href="#">Even the all-powerful Pointing has no control about the blind texts</a></h3>
                            <div class="meta">
                                <div><a href="#"><span class="icon-calendar"></span> July 12, 2018</a></div>
                                <div><a href="#"><span class="icon-person"></span> Admin</a></div>
                                <div><a href="#"><span class="icon-chat"></span> 19</a></div>
                            </div>
                        </div>
                    </div>
                    <div class="block-21 mb-4 d-flex">
                        <a class="Cause-img mr-4" style="background-image: url(/Content/HomepageTheme/images/image_3.jpg);"></a>
                        <div class="text">
                            <h3 class="heading"><a href="#">Even the all-powerful Pointing has no control about the blind texts</a></h3>
                            <div class="meta">
                                <div><a href="#"><span class="icon-calendar"></span> July 12, 2018</a></div>
                                <div><a href="#"><span class="icon-person"></span> Admin</a></div>
                                <div><a href="#"><span class="icon-chat"></span> 19</a></div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="sidebar-box ftco-animate">
                    <h3>Tag Cloud</h3>
                    <div class="tagcloud">
                        <a href="#" class="tag-cloud-link">dish</a>
                        <a href="#" class="tag-cloud-link">menu</a>
                        <a href="#" class="tag-cloud-link">food</a>
                        <a href="#" class="tag-cloud-link">sweet</a>
                        <a href="#" class="tag-cloud-link">tasty</a>
                        <a href="#" class="tag-cloud-link">delicious</a>
                        <a href="#" class="tag-cloud-link">desserts</a>
                        <a href="#" class="tag-cloud-link">drinks</a>
                    </div>
                </div>

                <div class="sidebar-box ftco-animate">
                    <h3>Paragraph</h3>
                    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Ducimus itaque, autem necessitatibus voluptate quod mollitia delectus aut, sunt placeat nam vero culpa sapiente consectetur similique, inventore eos fugit cupiditate numquam!</p>
                </div>
            </div>

        </div>
    </div>
</section> <!-- .section -->
