    var ariaValuenow = Math.Round((Model.CurrentFund < Model.Goal ? 100 * Model.CurrentFund / Model.Goal : 100), 0);
    //var width = ariaValuenow.ToString(CultureInfo.InvariantCulture) + "%";
    var background = ariaValuenow < 20 ? "bg-danger" :
        ariaValuenow < 50 && ariaValuenow >= 20 ? "bg-warning" :
        ariaValuenow < 75 && ariaValuenow >= 50 ? "bg-info" : "bg-success";
    var animated = ariaValuenow >= 100 ? "" : "progress-bar-striped progress-bar-animated";

}
